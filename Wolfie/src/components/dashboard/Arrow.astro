<script>
    document.addEventListener('astro:page-load', () => {
        const arrow_icon = document.getElementById('arrow-icon') as HTMLElement;
        const sidenav = document.getElementById('sidenav') as HTMLElement;
        const arrow = document.getElementById('arrow') as HTMLElement;
        arrow_icon.addEventListener('click', () => {
        
            sidenav.classList.toggle('responsive');
            arrow.classList.toggle('open');
        });
            });
</script>

<div class="arrow" id="arrow">
    <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 12H18M18 12L13 7M18 12L13 17" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
</div>

<style>
    .arrow {
        width: 50px;
        height: 50px;
        background-color: #fff;
        border-radius: 50%;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .arrow:hover {
        background-color: #f8f8f8;
    }
    .arrow.open {
        transform: rotate(180deg);
        box-shadow: 0 -3px 6px rgba(0, 0, 0, 0.16);
    }

</style>