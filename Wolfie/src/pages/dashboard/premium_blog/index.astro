---
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../../consts';
import getUserData from "../../../firebase/auth/getUserData";
import DashboardLayout from "../../../layouts/DashboardLayout.astro";

const posts = (await getCollection('premium_blog')).sort((a:any, b:any) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()).reverse();
// create an array with posts that contain category "concentration"
const concentrationPosts = posts.filter((post:any) => post.data.category === "concentration");
const studyPosts = posts.filter((post:any) => post.data.category === "study");
const roleModelPosts = posts.filter((post:any) => post.data.category === "role-models");

let categories = posts.map((post:any) => post.data.category);
 let uniqueCategories = [...new Set(categories)]; // remove duplicates
 let categorizedPosts = uniqueCategories.map((category:any) => {
     return {
         category: category,
         posts: posts.filter((post:any) => post.data.category === category),
         name: category.charAt(0).toUpperCase() + category.slice(1),
     }
 });


const sessionCookie = Astro.cookies.get("session")?.value ?? null;

const user = await getUserData(sessionCookie);

if (!user) {
  return Astro.redirect("/signin");
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style lang="scss">
			main {
				width: 960px;
				
			}
			section {
				margin-bottom: 2rem;
				z-index: 1;
				&:not(:first-child) {
					margin-top: 2rem;
				}
			}
			ul {
				display: flex;
				flex-direction: row;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: .5rem;
				overflow-x: scroll;
				overflow-y: hidden;
				filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));

				::-webkit-scrollbar {
					width: 5px;
				}
				::-webkit-scrollbar-track {
					background: #f1f1f1;
					border-radius: 2rem;
				}
				::-webkit-scrollbar-thumb {
					background: #888;
					border-radius: 10px;

				}

				/* Styles for Firefox */
				::-moz-scrollbar {
					width: 12px;
				}

				::-moz-scrollbar-track {
					background: #f1f1f1;
					border-radius: 10px;
				}
				::-moz-scrollbar-thumb {
					background: #888;
					border-radius: 10px;
				}
				/* Styles for IE and Edge */
				::-ms-scrollbar {
					width: 5px;
				}
				::-ms-scrollbar-track {
					background: #f1f1f1;
					border-radius: 10px;
				}
				::-ms-scrollbar-thumb {
					background: #888;
					border-radius: 10px;
				}

			}
			ul li {
				min-width: calc(50% - 1rem);
				* {
				text-decoration: none;
				transition: 0.2s ease;
				}
				img {
					margin-bottom: 0.5rem;
					border-radius: 12px;
				}
				a {
				display: block;
				}
			}
			ul li 
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a{
				&:hover {
					.title {
						color: rgb(var(--accent));
					}
					.date {
					color: rgb(var(--accent));
					}
				}
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.visible {
				display: block;
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
					font-size: 1rem;
					li {
						width: 100%;
						text-align: center;

						.title {
							font-size: 1rem;
						}

						img {
							width: 100%;
						}
					}
				}
			}
		</style>
	</head>
	<DashboardLayout title="Courses - LearnBetter!" description ="Discover new course and revisit old ones, there's always something to learn.">
		<div id="courses">
			<div>
				<p>Welcome back, {user.displayName}!</p>
				<p>Here are some of the latest posts from the premium blog:</p>
			</div>
			<section id="course_section">
				<h2>All Posts <span class="toggle-icon">+</span></h2>
				<ul>
					{
						posts.map((post:any) => (
							
							<li>
								<a href={`/dashboard/premium_blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h5 class="title">{post.data.title}</h5>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>

		{ categorizedPosts.length > 0 ? (
			<div>
				{categorizedPosts.map((category:any) => (
					<section id="course_section">
						<h3>{category.name} <span class="toggle-icon">+</span></h3>
						
						<ul class = {category.name}>
							{category.posts.map((post:any) => (
								<li>
								<a href={`/dashboard/premium_blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h5 class="title">{post.data.title}</h5>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
										
									</p>
								</a>
							</li>
							))}
						</ul>
					</section>
					))}
			</div>
		
			) : <p>No categories found</p> }
		</div>
		
	</DashboardLayout>
</html>

<script>
	import "../../../scripts/courseExpansion.ts";

</script>

