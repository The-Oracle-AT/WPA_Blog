</html>

<style lang="scss">
	$colors: ( #3151A1, #b35918, #7a46a0, #2871a1, #b33b2d, #239a57, #b3960c);
	@function borderColor($index) {
		@return nth($colors, $index + 1);
	}
	a {
			text-decoration: none;
			color: inherit;
			background-color: rgba(78, 175, 255, 0.3);
			border-radius: 0.5em;
			padding: 0.3rem 0.5rem;

			&:hover {
				background-color: var(--link-hover);
			}
		}
	main {
		display: flex;
		flex-direction: column;
		gap: 1rem;

		
		
	}
	.feature {
		margin-bottom: 4rem;
	}
		

	section {
		width: 100%;
		display: flex;
		flex-direction: column;	
		.cta, .cta-buttons {
				display: flex;
				flex-direction: column;
				width: fit-content;
				align-items: center;
				gap:.2rem;
				a {
					width: 150%;
					text-align: center;
					border-radius: 2rem;

				}
				
				
			}
	}
	.hero {
			display: flex;
			flex-direction: column;
			
			height: 94svh;
			background-image: url('/hero-img-3.jpeg');
			background-repeat: no-repeat;
			background-attachment: fixed;
			background-size: cover;
			background-position-x: center;
			background-position-y: center;
			
			background-color: white;
			.container {
				height: 100%;
				margin-bottom: -.1rem;
				backdrop-filter: blur(01rem);
				width: 100%;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;

			}
	}
	.feature:first-child .grid{
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		
	}

	h2 {
			font-size: xx-large;
		}
	.main-content {
		font-size: large;
	}
	.content-child {
		display: flex;
		flex-direction: column;
		width: 100%;
		gap: 2rem;
		
		
		div {
			width: 100%;
			font-size: medium;
			margin-top: 2rem;
			display: flex;
			flex-direction: row;
			justify-content: space-evenly;
			@for $i from 0 through length($colors) - 1 {
			&:nth-child(#{$i + 1}) div strong {
				color: borderColor($i);
				
				}
			}
			div {
				max-width: 30rem;
				padding: 2rem;
				display: flex;
				flex-direction: column;
			}
			
			
			
		}
		div:nth-child(even) {
				flex-direction: row-reverse;
				
			}

		
	}
	@media screen and (max-width: 600px) {
		.content-child {
			div {
				flex-direction: column;
				justify-content: center;
				align-items: center;
				&:nth-child(even) {
					flex-direction: column;
				}
			}
		}
	}




</style>
